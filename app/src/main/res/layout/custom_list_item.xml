<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_margin="20dp"
                tools:src="@drawable/profile_pic"
                app:civ_border_color="@color/design_default_color_primary"
                app:civ_border_width="2dp"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:layout_marginStart="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/contactNameItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Username"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/last_massage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Hi, how are you?"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="10:00"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:padding="15dp"
            android:layout_alignParentRight="true" />

        <!-- Line separator at the bottom -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0.95dp"
            android:background="@color/color_separator"
            android:layout_marginTop="62dp"
            android:layout_below="@+id/time"

            tools:ignore="NotSibling" />

    </RelativeLayout>

</LinearLayout>
